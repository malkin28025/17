<h1><%= @restaurant.name %></h1>

<p>Here are all the reviews:</p>

<h2>Add a review</h2>
<% @restaurant.reviews.each do |review| %>
	<p>Rating:<%= review.rating %></p>
	<p>Comment: <%= review.comment %></p>
	<p>Posted by: <%= review.user.name %> at <%= time_ago_in_word review. created_at %> ago</p>
<% end %>


<%= form_for [ @reataurant, @review ] do |f| %>
	<%= f.label :user_id, "User name" %>
	<%= f.select :user_id, @users.collect{|user| [ user.name, user.id]}%>

	<%= f.label :comment %>
	<%= f.text_area :comment, rows: 10, cols: 35 %>

	<%= f.label :rating %>
	<%= f.select :rating, options_for_select({1,2,3,4,5})%>

	<%= f.submit %>
<% end %>
	
